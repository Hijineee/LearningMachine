<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="Community">

  	<select id="totalCount"  parameterType="String" resultType="integer">
  		SELECT count(*)
  		from ${name}
  	</select>
  	
  	<select id="qnaList" parameterType="pageDTO" resultType="map">
  		SELECT * , (SELECT c.c_name FROM category c WHERE c.c_code = q.l_code)  l_category
  		from lecture_qna q
  		limit #{startPage},#{lastPage}
  	</select>
  
  </mapper>